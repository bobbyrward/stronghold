{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":approveMajorUpdates",
    ":semanticCommitScopeDisabled",
    ":separateMultipleMajorReleases",
    "helpers:pinGitHubActionDigests"
  ],
  "baseBranchPatterns": [
    "main"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchCategories": [
        "golang"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ]
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "postUpdateOptions": [
        "gomodUpdateImportPaths"
      ]
    }
  ]
}
